package com.ch12;

import java.util.List;
import java.util.Vector;

import javax.swing.JFrame;
import javax.swing.JScrollPane;
import javax.swing.JTable;
import javax.swing.table.DefaultTableModel;
class ChatVO {
	private String nickName = null;
	private int age = 0;
	public String getNickName() {
		return nickName;
	}
	public void setNickName(String nickName) {
		this.nickName = nickName;
	}
	public int getAge() {
		return age;
	}
	public void setAge(int age) {
		this.age = age;
	}
}

public class VectorTest extends JFrame {
	String cols[] = {"닉네임", "나이"};
	String data[][] = new String[0][2];
	DefaultTableModel dtm = new DefaultTableModel(data,cols);
	JTable jt = new JTable(dtm);
	JScrollPane jsp = new JScrollPane(jt);
	///*** 생성자 ***///
	public VectorTest() {
		List<ChatVO> list = new Vector<>();
		ChatVO cVO = new ChatVO();
		cVO.setNickName("데프트");
		cVO.setAge(23);
		list.add(cVO);
		cVO.setNickName("페이커");
		cVO.setAge(23);
		list.add(cVO);
		cVO.setNickName("프레이");
		cVO.setAge(26);
		list.add(cVO);
		Vector<ChatVO> vec = new Vector<>();
		ChatVO cVO1 = new ChatVO();
		cVO1.setNickName("유칼");
		cVO1.setAge(21);
		vec.add(cVO1);
		cVO1.setNickName("7ㅣ인");
		cVO1.setAge(22);
		vec.add(cVO1);
		cVO1.setNickName("스맵");
		cVO1.setAge(24);
		vec.add(cVO1);
		for(int i=0;i<vec.size();i++) {
			ChatVO rcVO = vec.get(i);
			Vector<String> rowData = new Vector<>();
			rowData.add(rcVO.getNickName());
			rowData.add(String.valueOf(rcVO.getAge()));
			dtm.addRow(rowData);
		}
		//vec.copyInto(anArray);
		//copyInto가 자식에는 있지만 부모에는 없기 때문에
		//list.copyInto 메소드는 사용 불가하다.
		this.add("Center",jsp);
		this.setSize(500, 300);
		this.setVisible(true);
	}
	///// 메인 /////
	public static void main(String[] args) {
		new VectorTest();
	}
}
