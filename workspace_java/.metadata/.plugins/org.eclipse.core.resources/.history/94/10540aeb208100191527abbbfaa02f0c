package com.address;

import java.awt.BorderLayout;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.JButton;
import javax.swing.JDialog;
import javax.swing.JPanel;

public class SubBook extends JDialog implements ActionListener{
	JPanel jp_south = new JPanel();
	JButton jbtn_save = new JButton("저장");
	
	public void initDisplay() {
		AddressBook aBook = new AddressBook();
		this.setLayout(new BorderLayout());
		jp_south.add(jbtn_save,JPanel.LEFT_ALIGNMENT);
		this.add("South",jp_south);
		//자식창의 제목은 세가지 중 한 가지가 되어야 함.
		//하나의 화면을 가지고 세가지 기능을 어떻게 처리하지?
		this.setTitle("입력|수정|상세조회");
		this.setSize(300, 400);
		this.setVisible(false);
	}
	public static void main(String[] args) {
		SubBook sBook = new SubBook();
		sBook.initDisplay();
	}
	@Override
	public void actionPerformed(ActionEvent e) {
		String label = e.getActionCommand();
		if("저장".equals(label)) {
			this.dispose();//창 닫침
			
			
		}
	}

}
