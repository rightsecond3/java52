package com.network1;

import java.net.ServerSocket;
import java.net.Socket;
import java.util.List;
import java.util.Vector;

import javax.swing.JFrame;

public class TalkServer extends JFrame implements Runnable {
	//동시에 여러 접속자에 대한 소켓 정보를 안정적으로 수집하기 위해 필요.
	ServerSocket server = null;
	//서버소켓에 접속해온 소켓 정보를 일반 소켓이 받음.
	Socket client = null;
	//사용자가 접속을 해오면 접속해 온 사용자를 스레드로 관리함.
	TalkServerThread tst = null;
	List<TalkServerThread> chatList = null;
	
	///*** 생성자 ***///
	public TalkServer() {}
	//** 화면 처리 부 **//
	public void initDisplay() {
		
	}
	@Override
	public void run() {
		/*
		 * Vector안에 있는 스레드는 누구에 대한 정보를 갖고있는가? - 접속했던 클라이언트들의 정보
		 * 이 스레드는 언제 생성하면 되나? - 클라이언트가 들어올 떄
		 * 이 스레드는 언제 chatList에 담으면 되나? - 다른 클라이언트가 들어 올때
		 * 스레드의 인스턴스 변수를 활용 하여 서버측의 어떤 변수를 접근해야 하나?
		 * 서버에서 듣기는 어디서 이루어지면 되는가?
		 * 서버에서 말하기는 언제 처리하면 되는가?
		 */
		chatList = new Vector<TalkServerThread>();
	}

	public static void main(String[] args) {
		// TODO Auto-generated method stub

	}

}
