package com.basic;

import java.awt.GridLayout;

import javax.swing.ImageIcon;
import javax.swing.JFrame;
import javax.swing.JLabel;

public class FileFramTest extends JFrame {

	public void init() {
		JLabel jl = new JLabel("너 뭐임?");
		String fileName = "text.txt";
		jl.setIcon(new ImageIcon("C:\\workspace_java\\dev_java\\src\\images\\2.jpg"));
		jl.setText("<html><font color='red'>다운로드</font></html>");
		jl.setLayout(new GridLayout(1,2));
		this.add(jl);
		this.setVisible(true);
		this.setSize(300, 300);
	}
	public static void main(String[] args) {
		FileFramTest f = new FileFramTest();
		f.init();
	}

}
