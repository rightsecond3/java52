package com.basic;

import java.awt.GridLayout;

import javax.swing.ImageIcon;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.GroupLayout.Alignment;

public class FileFramTest extends JFrame {

	public void init() {
		JLabel jl = new JLabel("너 뭐임?");
		String fileName = "text.txt";
		jl.setHorizontalAlignment(Alignment.BASELINE);
		jl.setIcon(new ImageIcon("C:\\workspace_java\\dev_java\\src\\images\\2.jpg"));
		jl.setText("<html><font color='red'>"+fileName+"</font></html>");
		this.add(jl);
		this.setVisible(true);
		this.setSize(300, 300);
	}
	public static void main(String[] args) {
		FileFramTest f = new FileFramTest();
		f.init();
	}

}
