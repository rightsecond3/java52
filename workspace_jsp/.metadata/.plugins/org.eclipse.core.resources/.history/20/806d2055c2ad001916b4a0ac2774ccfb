	<script type="text/javascript">
		function answer(p_dap) {
			for(var i=0;i<document.getElementById("f_test1").cb_test1.length;i++) {
				if(p_dap==i) { //0이 아닐 경우 다 true
					document.getElementById("f_test1").cb_test1[i].checked=1;
				} else {
					document.getElementById("f_test1").cb_test1[i].checked=0;
				}
			}
		}
		//다음 문제 선택시 이전문제 답안지 기억하기 - hidden 속성
		function next() {
			var temp = 1;
			for(var i=0;i<document.getElementById("f_test1").cb_test1.length;i++) {
				if(document.getElementById("f_test1").cb_test1[i].checked==1) {
					document.getElementById("f_test1").dap1.value = temp;
				} else {
					temp = temp + 1;
				}
			}
			document.getElementById("f_test1").submit();
		}
	</script>
