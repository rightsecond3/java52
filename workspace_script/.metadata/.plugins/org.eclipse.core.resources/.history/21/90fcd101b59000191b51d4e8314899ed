<body>
        <h1 id='news'></h1> <!--id를 체크하려면 script보다 -->
        <script type="text/javascript">
            window.onload = function(){
                var news = $('#news');
                //매 1초마다 함수를 실행한다.
                setInterval(function(){
                    news.html(new Date().toString());
                },1000);//([1],[2]) [2] :밀리세컨드
    
            }
        
